#############################################
# => Common shell mistakes
#############################################
alias ls='ls --sort=extension --color=auto'
alias ll='ls -lh'
alias lal='ls -alh'
alias la='ls -A'
alias pms='sudo pm-suspend'
alias psg='ps -A | grep'
#alias se='sudo gvim'
#alias e='gvim'
alias grep='grep --color -n'
alias smi='sudo make install'
#alias l='ls -CF'

# Some more, to avoid mistakes
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'


#############################################
# => Make
#############################################
alias makepkg='clear && makepkg'
alias mkpkg='makepkg'


#############################################
